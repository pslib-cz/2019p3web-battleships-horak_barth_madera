@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using Microsoft.AspNetCore.Identity
@using Battleships.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <img src="~/images/logo.png" class="center" />

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="btn-group-vertical">
            <a class="btn btn-primary" asp-page-handler="StartGame" asp-route-size="5">Start Game (size 5×5)</a>
            <a class="btn btn-primary" asp-page-handler="StartGame" asp-route-size="10">Start Game (size 10×10)</a>
            <a class="btn btn-primary" asp-page="GamesListPH">List your games</a>
        </div>
    }
    else
    {

        <div class="jumbotron">
            <h2 class="display-4 text-center">Login required</h2>          
            <hr class="my-4">
            <div class="text-center">
                <a class="btn btn-secondary" style="margin-right: 30px" asp-area="Identity" asp-page="/Account/Login">Login</a>
                <a class="btn btn-light"  asp-area="Identity" asp-page="/Account/Register">Register</a>
            </div>
            
        </div>
    }



</body>
</html>
