@page
@model PrivacyModel
@{
    ViewData["Title"] = "Games List";
}



<img src="~/images/logo.png" alt="Alternate Text" class="center" />
<p class="text-center game-list-title">Your listed games, feel free to choose.</p>

<table class="table table-striped table-hover game-list-table">
    <tr class="head">
        <td>Owner:</td>
        <td>Game State</td>
        <td>Game Size</td>
        <td>Join Game</td>
        <td>Remove Game</td>
    </tr>

    @foreach (var item in Model.AllGames)
    {
        <tr>
            <td>@Model._ga.GetUserName(item.OwnerId)</td>
            <td>@item.GameState</td>
            <td>@item.GameSize</td>

            <td><a class="btn btn-primary" asp-page-handler="EnterGame" asp-route-value="@item.GameId">Join</a></td>
            <td><a class="btn btn-danger" asp-page-handler="RemoveGame" asp-route-value="@item.GameId">Remove</a></td>
        </tr>
    }
</table>

