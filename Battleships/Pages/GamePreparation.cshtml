@page
@model Battleships.Pages.GamePreparationModel
@{
    ViewData["Title"] = "GamePreparation";
}

<img src="~/images/logo.png" alt="Alternate Text" class="center" />
<p class="text-center game-list-title">Place your ships</p>
<div class="alert alert-light text-center" role="alert">
    Place your ships! - POUZE TESTOVACÍ (placement, hra atd. na jedné stránce)
</div>
<table class="bftable">
    @for (var i = 0; i < Model.LoadedGame.GameSize; i++)
    {
        <tr>
            @for (var d = 0; d < Model.LoadedGame.GameSize; d++)
            {
                <td class="bftd"><a asp-page-handler="TileAction" asp-route-x="@d" asp-route-y="@i">x = @d; y = @i; </a></td>
            }
        </tr>
    }
</table>
<div class="text-center game-prep">
    <a class="btn btn-primary" asp-page="Index">Cancel</a>
    <a class="btn btn-primary" asp-page="Game">Done</a>
</div>
